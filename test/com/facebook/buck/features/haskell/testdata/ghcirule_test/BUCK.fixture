haskell_ghci(
    name = "foo",
    srcs = [
        "Foo.hs",
    ],
    extra_script_templates = [
        "extra_scripts/foo_ghc",
    ],
)

haskell_ghci(
    name = "foo_prof",
    srcs = [
        "Foo.hs",
    ],
    enable_profiling = True,
    extra_script_templates = [
        "extra_scripts/foo_ghc",
    ],
)

haskell_ghci(
    name = "prebuilt_foreign",
    srcs = [
        "Foreign.hs",
    ],
    extra_script_templates = [
        "extra_scripts/foo_ghc",
    ],
    deps = [
        ":prebuilt_c",
    ],
)

prebuilt_cxx_library(
    name = "prebuilt_c",
    static_lib = ":c#static,default",
    visibility = ["PUBLIC"],
)

cxx_library(
    name = "c",
    srcs = [
        "foreign.c",
    ],
)
